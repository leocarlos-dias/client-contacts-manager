generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id                 String    @id
  firstName          String
  lastName           String
  email              String    @unique
  phone              String
  createdAt          DateTime
  contactsAssociated Contact[]

  @@map("clients")
}

model Contact {
  id           String   @id
  firstName    String
  lastName     String
  email        String   @unique
  phone        String
  registeredAt DateTime
  clientId     String
  client       Client?  @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@map("contacts")
}
